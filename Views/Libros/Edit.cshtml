@model SupabaseNET.Models.Libro
@{
    ViewData["Title"] = "Editar Libro";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-4">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Volver a la lista
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Editar Libro</h1>
        <p class="mt-1 text-sm text-gray-500">Actualiza la informaci√≥n del libro</p>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="bg-white shadow-sm rounded-lg border border-gray-200 p-8">
        <div asp-validation-summary="ModelOnly" class="mb-6 rounded-md bg-red-50 border border-red-200 p-4">
            <div class="text-sm text-red-800">
                @Html.ValidationSummary(true)
            </div>
        </div>
        
        <input type="hidden" asp-for="Id" />

        <div class="space-y-6">
            <div>
                <label asp-for="Titulo" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Titulo" 
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green sm:text-sm transition-colors" />
                <span asp-validation-for="Titulo" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div>
                <label asp-for="Autor" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Autor" 
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green sm:text-sm transition-colors" />
                <span asp-validation-for="Autor" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Isbn" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Isbn" 
                           class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green sm:text-sm transition-colors" />
                    <span asp-validation-for="Isbn" class="mt-1 text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="AnioPublicacion" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="AnioPublicacion" type="number" 
                           class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green sm:text-sm transition-colors" />
                    <span asp-validation-for="AnioPublicacion" class="mt-1 text-sm text-red-600"></span>
                </div>
            </div>

            <div>
                <label asp-for="Editorial" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Editorial" 
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green sm:text-sm transition-colors" />
                <span asp-validation-for="Editorial" class="mt-1 text-sm text-red-600"></span>
            </div>

            <div>
                <label for="imagen" class="block text-sm font-medium text-gray-700 mb-2">Imagen del Libro</label>
                
                @if (!string.IsNullOrEmpty(Model.ImagenUrl))
                {
                    <div class="mb-4">
                        <p class="text-sm text-gray-600 mb-2">Imagen actual:</p>
                        <img src="@Model.ImagenUrl" alt="Imagen del libro" class="w-32 h-32 object-cover rounded-md border border-gray-300" />
                    </div>
                    <div class="flex items-center mb-4">
                        <input id="eliminarImagen" name="eliminarImagen" type="checkbox" value="true" 
                               class="h-4 w-4 text-supabase-green focus:ring-supabase-green border-gray-300 rounded" />
                        <label for="eliminarImagen" class="ml-2 block text-sm text-gray-700">
                            Eliminar imagen actual
                        </label>
                    </div>
                }
                
                <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-gray-400 transition-colors">
                    <div class="space-y-1 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <div class="flex text-sm text-gray-600">
                            <label for="imagen" class="relative cursor-pointer bg-white rounded-md font-medium text-supabase-green hover:text-green-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-supabase-green">
                                <span>Subir nueva imagen</span>
                                <input id="imagen" name="imagen" type="file" class="sr-only" accept="image/jpeg,image/jpg,image/png,image/gif,image/webp" />
                            </label>
                            <p class="pl-1">o arrastra y suelta</p>
                        </div>
                        <p class="text-xs text-gray-500">PNG, JPG, GIF, WEBP hasta 5MB</p>
                    </div>
                </div>
                <span asp-validation-for="ImagenUrl" class="mt-1 text-sm text-red-600"></span>
            </div>
        </div>

        <div class="mt-8 flex space-x-3">
            <button type="submit" 
                    class="flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-supabase-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                Guardar Cambios
            </button>
            <a asp-action="Index" 
               class="flex-1 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors text-center">
                Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('imagen').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const container = document.querySelector('.border-dashed');
                    container.innerHTML = `
                        <div class="space-y-1 text-center">
                            <img src="${e.target.result}" alt="Preview" class="mx-auto h-32 w-32 object-cover rounded-md" />
                            <p class="text-sm text-gray-600">${file.name}</p>
                        </div>
                    `;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}
