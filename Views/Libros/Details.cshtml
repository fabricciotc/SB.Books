@model SupabaseNET.Models.Libro
@{
    ViewData["Title"] = "Detalles del Libro";
}

<div class="max-w-4xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-4">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Volver a la lista
        </a>
        <h1 class="text-3xl font-bold text-gray-900">@Model.Titulo</h1>
        <p class="mt-1 text-lg text-gray-600">@Model.Autor</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
        <div class="p-8">
                <dl class="space-y-4">
                    @if (!string.IsNullOrEmpty(Model.Isbn))
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">ISBN</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.Isbn</dd>
                        </div>
                    }
                    @if (Model.AnioPublicacion.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Año de Publicación</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.AnioPublicacion</dd>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Editorial))
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Editorial</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.Editorial</dd>
                        </div>
                    }
                    @if (Model.FechaCreacion.HasValue)
                    {
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Fecha de Creación</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.FechaCreacion.Value.ToString("dd/MM/yyyy")</dd>
                        </div>
                    }
                </dl>

                <div class="mt-8 pt-6 border-t border-gray-200 flex space-x-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" 
                       class="flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-supabase-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                        Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" 
                       class="flex-1 inline-flex justify-center py-2 px-4 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                        Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
