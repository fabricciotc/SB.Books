@model IEnumerable<SupabaseNET.Models.Libro>
@{
    ViewData["Title"] = "Mis Libros";
}

<div class="mb-6 flex justify-between items-center">
    <div>
        <h1 class="text-3xl font-bold text-gray-900">Mis Libros</h1>
        <p class="mt-1 text-sm text-gray-500">Gestiona tu colecci√≥n de libros</p>
    </div>
    <a asp-action="Create" 
       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-supabase-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nuevo Libro
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
                <div class="h-48 bg-gray-100 flex items-center justify-center">
                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                    {
                        <img src="@item.ImagenUrl" alt="@item.Titulo" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    }
                </div>
                <div class="p-5">
                    <h3 class="text-lg font-semibold text-gray-900 mb-1 line-clamp-1">@item.Titulo</h3>
                    <p class="text-sm text-gray-600 mb-2">@item.Autor</p>
                    <div class="flex flex-wrap gap-2 mb-4 text-xs text-gray-500">
                        @if (!string.IsNullOrEmpty(item.Isbn))
                        {
                            <span class="px-2 py-1 bg-gray-100 rounded">ISBN: @item.Isbn</span>
                        }
                        @if (item.AnioPublicacion.HasValue)
                        {
                            <span class="px-2 py-1 bg-gray-100 rounded">@item.AnioPublicacion</span>
                        }
                        @if (!string.IsNullOrEmpty(item.Editorial))
                        {
                            <span class="px-2 py-1 bg-gray-100 rounded">@item.Editorial</span>
                        }
                    </div>
                    <div class="flex space-x-2">
                        <a asp-action="Details" asp-route-id="@item.Id" 
                           class="flex-1 text-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                            Ver
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" 
                           class="flex-1 text-center px-3 py-2 text-sm font-medium text-white bg-supabase-green rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                            Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" 
                           class="px-3 py-2 text-sm font-medium text-red-700 bg-white border border-red-300 rounded-md hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-16 bg-white rounded-lg border border-gray-200">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No hay libros</h3>
        <p class="mt-1 text-sm text-gray-500">Comienza creando tu primer libro.</p>
        <div class="mt-6">
            <a asp-action="Create" 
               class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-supabase-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Crear Libro
            </a>
        </div>
    </div>
}
