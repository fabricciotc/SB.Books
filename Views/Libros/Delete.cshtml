@model SupabaseNET.Models.Libro
@{
    ViewData["Title"] = "Eliminar Libro";
}

<div class="max-w-2xl mx-auto">
    <div class="mb-6">
        <a asp-action="Index" class="inline-flex items-center text-sm text-gray-500 hover:text-gray-700 mb-4">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Volver a la lista
        </a>
        <h1 class="text-3xl font-bold text-gray-900">Eliminar Libro</h1>
        <p class="mt-1 text-sm text-red-600">Esta acción no se puede deshacer</p>
    </div>

    <div class="bg-white rounded-lg shadow-sm border border-red-200 overflow-hidden">
        <div class="p-8">
            <div class="flex items-center mb-6">
                <div class="flex-shrink-0">
                    <svg class="h-10 w-10 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-900">¿Está seguro de que desea eliminar este libro?</h3>
                    <p class="mt-1 text-sm text-gray-500">Esta acción eliminará permanentemente el libro.</p>
                </div>
            </div>

            <div class="border-t border-gray-200 pt-6">
                <div class="bg-gray-50 rounded-lg p-6 mb-6">
                    <dl class="space-y-4">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Título</dt>
                            <dd class="mt-1 text-sm text-gray-900 font-semibold">@Model.Titulo</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Autor</dt>
                            <dd class="mt-1 text-sm text-gray-900">@Model.Autor</dd>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Isbn))
                        {
                            <div>
                                <dt class="text-sm font-medium text-gray-500">ISBN</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.Isbn</dd>
                            </div>
                        }
                        @if (Model.AnioPublicacion.HasValue)
                        {
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Año de Publicación</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.AnioPublicacion</dd>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Editorial))
                        {
                            <div>
                                <dt class="text-sm font-medium text-gray-500">Editorial</dt>
                                <dd class="mt-1 text-sm text-gray-900">@Model.Editorial</dd>
                            </div>
                        }
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="flex space-x-3">
                        <button type="submit" 
                                class="flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
                            Sí, eliminar
                        </button>
                        <a asp-action="Index" 
                           class="flex-1 inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors text-center">
                            Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
