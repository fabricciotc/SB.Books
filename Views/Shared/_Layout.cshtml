<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupabaseNET</title>
    <link rel="icon" href="~/supabase-logo.png"/>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'supabase-green': '#3ECF8E',
                        'supabase-dark': '#1F2937',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
    <header class="bg-white border-b border-gray-200 shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center space-x-8">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center space-x-2">
                        <span class="text-xl font-semibold text-gray-900">SupabaseNET</span>
                    </a>
                    <div class="hidden md:flex space-x-1">
                        <a asp-area="" asp-controller="Home" asp-action="Index" 
                           class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 transition-colors">
                            Inicio
                        </a>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-area="" asp-controller="Libros" asp-action="Index" 
                               class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100 transition-colors">
                                Libros
                            </a>
                        }
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="flex items-center space-x-4">
                            <span class="text-sm text-gray-600 hidden sm:block">
                                @User.Identity.Name
                            </span>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                                <button type="submit" 
                                        class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                                    Cerrar Sesión
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="flex items-center space-x-2">
                            <a asp-area="" asp-controller="Auth" asp-action="Login" 
                               class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900 transition-colors">
                                Iniciar Sesión
                            </a>
                            <a asp-area="" asp-controller="Auth" asp-action="Register" 
                               class="px-4 py-2 text-sm font-medium text-white bg-supabase-green rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                                Registrarse
                            </a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-1">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-6 rounded-md bg-green-50 border border-green-200 p-4" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-green-800">@TempData["SuccessMessage"]</p>
                        </div>
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-6 rounded-md bg-red-50 border border-red-200 p-4" role="alert">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-red-800">@TempData["ErrorMessage"]</p>
                        </div>
                    </div>
                </div>
            }

            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-t border-gray-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            <div class="flex justify-between items-center">
                <p class="text-sm text-gray-500">
                    &copy; @DateTime.Now.Year SupabaseNET. Todos los derechos reservados.
                </p>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-sm text-gray-500 hover:text-gray-700">
                    Privacidad
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
