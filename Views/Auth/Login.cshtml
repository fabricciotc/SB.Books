@model SupabaseNET.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="min-h-[calc(100vh-12rem)] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Iniciar Sesión
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                ¿No tienes una cuenta?
                <a asp-action="Register" class="font-medium text-supabase-green hover:text-green-600">
                    Regístrate aquí
                </a>
            </p>
        </div>

        <form asp-action="Login" method="post" class="mt-8 space-y-6 bg-white p-8 rounded-lg shadow-sm border border-gray-200">
            <div asp-validation-summary="ModelOnly" class="rounded-md bg-red-50 border border-red-200 p-4">
                <div class="text-sm text-red-800">
                    @Html.ValidationSummary(true)
                </div>
            </div>

            <div class="space-y-4">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Email" 
                           class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green focus:z-10 sm:text-sm transition-colors" 
                           placeholder="tu@email.com" />
                    <span asp-validation-for="Email" class="mt-1 text-sm text-red-600"></span>
                </div>

                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                    <input asp-for="Password" 
                           class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-2 focus:ring-supabase-green focus:border-supabase-green focus:z-10 sm:text-sm transition-colors" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Password" class="mt-1 text-sm text-red-600"></span>
                </div>
            </div>

            <div>
                <button type="submit" 
                        class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-supabase-green hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-supabase-green transition-colors">
                    Iniciar Sesión
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
